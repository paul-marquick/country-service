<UserControl x:Class="CountryService.WpfAdminApp.Views.UserControls.ClearableTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CountryService.WpfAdminApp.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">

    <Grid Background="White">

        <TextBox x:Name="textBoxInput" VerticalContentAlignment="Center" 
            FontSize="16" FontWeight="Light" Background="Transparent"
            TextChanged="textBoxInput_TextChanged" />

        <TextBlock x:Name="textBlockPlaceHolder" Text="{Binding PlaceHolderText}" FontSize="16" FontWeight="Light"
            Foreground="DarkGray" VerticalAlignment="Center" Margin="5,0,0,0"
            Panel.ZIndex="-1"/>

        <Button x:Name="buttonClear" Width="30" HorizontalAlignment="Right" Content="X" 
            Background="Transparent" Foreground="LightGray" BorderThickness="0" 
            Click="buttonClear_Click"/>

    </Grid>

</UserControl>
